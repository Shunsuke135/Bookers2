<% if @book.errors.any? %>
       <h3><%= @book.errors.count %>prohibited this obj from being saved:</h3>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <h1>User info</h1>
   <%= render 'users/profile', user: current_user %>
   <h1>New book</h1>
   <%= render 'books/new', book: @book %>
  </div>

   <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
     <table class="table">
      <thead>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </thead>
      <tbody>
    <% @books.each do |book| %>
     <tr>
       <td>
        <%= link_to user_path(book.id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %>
        <% end %>
       <br></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>

       <td><%= render 'favorites/favorite', book: book %></td>

       <td>コメント数: <%= book.book_comments.count %></td>



     </tr>
    <% end %>
    </tbody>
    </table>
  </div>
 </div>
</div>