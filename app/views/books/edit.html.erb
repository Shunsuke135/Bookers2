<div class="container">
 <div class="row">
  <div class="mx-auto">
   <h1>Editing Book</h1>

    <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
       <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book', class:"btn btn-success w-178px" %><br>
    <td><%= link_to "Show", book_path %></td>
    <td>|</td>
    <td><%= link_to "Back", books_path %></td>
    <% end %>
</div>
 </div>
</div>